{
  "apps": [
    {
      "name": "peeak",
      "script": "node_modules/.bin/next",
      "args": "start",
      "cwd": "/root/app/peeak",
      "instances": 1,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "env_file": ".env",
      "error_file": "/root/logs/peeak-error.log",
      "out_file": "/root/logs/peeak-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G"
    }
  ]
}
